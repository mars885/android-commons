<resources>

    <integer name="default_window_animation_duration">300</integer>

    <!-- Fading Window Animations -->
    <integer name="fading_animation_duration">250</integer>

    <!-- Kitkat Scaling Window Animations -->
    <item name="kitkat_scaling_window_a_animation_min_scale" type="integer" format="float">1.0</item>
    <item name="kitkat_scaling_window_a_animation_max_scale" type="integer" format="float">1.2</item>
    <item name="kitkat_scaling_window_b_animation_min_scale" type="integer" format="float">0.8</item>
    <item name="kitkat_scaling_window_b_animation_max_scale" type="integer" format="float">1.0</item>

    <item name="kitkat_scaling_animation_min_alpha" type="integer" format="float">0.0</item>
    <item name="kitkat_scaling_animation_max_alpha" type="integer" format="float">1.0</item>

    <integer name="kitkat_scaling_animation_duration">200</integer>

    <!-- Horizontal Sliding Window Animations -->
    <item name="horizontal_sliding_animation_window_a_min_alpha" type="integer" format="float">0.80</item>
    <item name="horizontal_sliding_animation_window_a_max_alpha" type="integer" format="float">1.0</item>

    <integer name="horizontal_sliding_animation_duration">@integer/default_window_animation_duration</integer>

    <!-- Vertical Sliding Window Animations -->
    <item name="vertical_sliding_window_a_alpha" type="integer" format="float">1.0</item>

    <integer name="vertical_sliding_animation_duration">@integer/default_window_animation_duration</integer>

    <!-- Overshoot Scaling Window Animations -->
    <item name="overshoot_scaling_window_a_min_scale" type="integer" format="float">0.9</item>
    <item name="overshoot_scaling_window_a_max_scale" type="integer" format="float">1.0</item>
