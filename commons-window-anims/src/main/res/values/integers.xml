    <item name="overshoot_scaling_window_a_min_alpha" type="integer" format="float">0.9</item>
    <item name="overshoot_scaling_window_a_max_alpha" type="integer" format="float">1.0</item>

    <item name="overshoot_scaling_window_b_enter_min_alpha" type="integer" format="float">0.9</item>
    <item name="overshoot_scaling_window_b_enter_max_alpha" type="integer" format="float">1.0</item>

    <item name="overshoot_scaling_window_b_exit_min_alpha" type="integer" format="float">0.0</item>
    <item name="overshoot_scaling_window_b_exit_max_alpha" type="integer" format="float">1.0</item>

    <integer name="overshoot_scaling_animation_scale_element_duration">300</integer>
    <integer name="overshoot_scaling_animation_alpha_element_duration">100</integer>

