<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="@dimen/toolbar_height"
    tools:parentTag="android.widget.FrameLayout">

    <FrameLayout
        android:id="@+id/leftBtnContainer"
        android:layout_width="@dimen/toolbar_button_container_size"
        android:layout_height="@dimen/toolbar_button_container_size"
        android:layout_gravity="start|center_vertical">

        <ImageView
            android:id="@+id/leftBtnIv"
            android:layout_width="@dimen/toolbar_button_icon_size"
            android:layout_height="@dimen/toolbar_button_icon_size"
            android:layout_gravity="center"
            android:padding="@dimen/toolbar_button_icon_padding"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:backgroundTint="@color/toolbar_button_icon_color"/>

    </FrameLayout>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:fontFamily="@string/font_family_medium"
        android:textSize="@dimen/toolbar_title_text_size"
        android:textColor="@color/toolbar_title_text_color"
        android:ellipsize="end"
        style="@style/SingleLineTextView"
        tools:paddingStart="@dimen/toolbar_button_container_size"
        tools:paddingEnd="@dimen/toolbar_button_container_size"
        tools:text="Toolbar"/>

    <FrameLayout
        android:id="@+id/extraRightBtnContainer"
        android:layout_width="@dimen/toolbar_button_container_size"
        android:layout_height="@dimen/toolbar_button_container_size"
        android:layout_gravity="end|center_vertical"
        tools:layout_marginEnd="@dimen/toolbar_button_container_size">

        <ImageView
            android:id="@+id/extraRightBtnIv"
            android:layout_width="@dimen/toolbar_button_icon_size"
            android:layout_height="@dimen/toolbar_button_icon_size"
            android:layout_gravity="center"
            android:padding="@dimen/toolbar_button_icon_padding"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:backgroundTint="@color/toolbar_button_icon_color"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/rightBtnContainer"
        android:layout_width="@dimen/toolbar_button_container_size"
        android:layout_height="@dimen/toolbar_button_container_size"
        android:layout_gravity="end|center_vertical">

        <ImageView
            android:id="@+id/rightBtnIv"
            android:layout_width="@dimen/toolbar_button_icon_size"
            android:layout_height="@dimen/toolbar_button_icon_size"
            android:layout_gravity="center"
            android:padding="@dimen/toolbar_button_icon_padding"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:backgroundTint="@color/toolbar_button_icon_color"/>

    </FrameLayout>

</merge>